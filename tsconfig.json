{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "paths": {
      "@assets/*": ["./src/assets/*"],
      "@entities/*": ["./src/entities/*"],
      "@features/*": ["./src/features/*"],
      "@pages/*": ["./src/pages/*"],
      "@processes/*": ["./src/processes/*"],
      "@shared/*": ["./src/shared/*"],
      "@api/*": ["./src/shared/api/*"],
      "@lib/*": ["./src/shared/lib/*"],
      "@types/*": ["./src/shared/types/*"],
      "@ui/*": ["./src/shared/ui/*"],
      "@store/*": ["./src/store/*"],
      "@widgets/*": ["./src/widgets/*"],
      "@src/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": ["node_modules"]
}
